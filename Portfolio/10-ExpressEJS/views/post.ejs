<%- include('partials/header') %>

<main>
    <h1><%= post.title %></h1>
    
    <section class="post-content">
        <p><%= post.content %></p>
    </section>

    <section class="post-actions">
        <h2>Edit Post</h2>
        <form action="/post/<%= post.id %>/edit" method="POST">
            <div>
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="<%= post.title %>" required />
            </div>
            <div>
                <label for="content">Content:</label>
                <textarea name="content" id="content" rows="5" required><%= post.content %></textarea>
            </div>
            <input type="submit" value="Update Post" />
        </form>

        <form action="/post/<%= post.id %>/delete" method="POST" style="margin-top: 20px;">
            <input type="submit" value="Delete Post" onclick="return confirm('Are you sure you want to delete this post?')" />
        </form>
    </section>

    <a href="/home">Back to Home</a>
</main>

<%- include('partials/footer') %>