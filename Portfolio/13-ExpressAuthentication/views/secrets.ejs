<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Secrets - LOTR</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      margin: 0;
      padding: 20px;
    }
    .container {
      max-width: 1000px;
      margin: 0 auto;
      background: white;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid #f0f0f0;
    }
    h1 {
      color: #333;
      margin: 0;
    }
    .user-info {
      color: #666;
      font-size: 14px;
    }
    .actions {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
    }
    .btn {
      padding: 12px 24px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s;
    }
    .btn-primary {
      background: #667eea;
      color: white;
    }
    .btn-primary:hover {
      background: #5568d3;
    }
    .btn-secondary {
      background: #f0f0f0;
      color: #333;
    }
    .btn-secondary:hover {
      background: #e0e0e0;
    }
    .btn-danger {
      background: #dc3545;
      color: white;
    }
    .btn-danger:hover {
      background: #c82333;
    }
    .secrets-section {
      margin-top: 30px;
    }
    .secret-card {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 15px;
      border-left: 4px solid #667eea;
    }
    .secret-card p {
      margin: 0;
      color: #333;
      font-size: 16px;
      line-height: 1.6;
    }
    .secret-author {
      font-size: 12px;
      color: #888;
      margin-top: 10px;
    }
    .no-secrets {
      text-align: center;
      color: #999;
      padding: 40px;
      font-style: italic;
    }
    .welcome-msg {
      background: #e7f3ff;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 20px;
      color: #0066cc;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <div>
        <h1>ðŸ”’ Secret Page</h1>
        <% if (user) { %>
          <div class="user-info">Logged in as: <strong><%= user.username || user.email %></strong></div>
        <% } %>
      </div>
    </header>

    <div class="welcome-msg">
      <h2 style="margin-top: 0;">Welcome to the Secrets Page!</h2>
      <p>You have successfully authenticated and gained access to this protected area.</p>
    </div>

    <div class="actions">
      <a href="/submit" class="btn btn-primary">Submit a Secret</a>
      <a href="/" class="btn btn-secondary">Home</a>
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="secrets-section">
      <h2>All Secrets</h2>
      <% if (usersWithSecrets && usersWithSecrets.length > 0) { %>
        <% usersWithSecrets.forEach(function(userItem) { %>
          <div class="secret-card">
            <p>"<%= userItem.secret %>"</p>
            <div class="secret-author">- Shared by <%= userItem.username || 'Anonymous' %></div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="no-secrets">
          <p>No secrets have been shared yet. Be the first to share yours!</p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
